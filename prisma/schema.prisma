generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id             String   @id @default(cuid()) @map("_id")
  title          String
  author         String
  publishedAt    DateTime
  readTime       String
  tags           String[]
  featuredImage  String   // Keep this for backward compatibility
  content        Json
}

model Image {
  id        String   @id @default(cuid()) @map("_id")
  filename  String
  mimeType  String
  size      Int
  data      String   // base64 encoded image data
  uploadedAt DateTime @default(now())
}
